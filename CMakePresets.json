{
  "version": 4,
  "configurePresets": [
    {
      "name": "debug-clang",
      "displayName": "Debug clang",
      "description": "Debugging CMake preset that uses clang for compilation",
      "binaryDir": "${sourceDir}/debug-clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release CMake preset",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debugging CMake preset",
      "binaryDir": "${sourceDir}/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
      }
    }
  ]
}